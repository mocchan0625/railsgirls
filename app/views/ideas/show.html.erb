<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @idea.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @idea.description %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@idea.picture_url, height: 150, width: 150) if @idea.picture.present? %>
</p>

<h3>コメント</h3>
  <% @comments.each do |comment| %>
    <div>
      <strong><%= comment.user_name %></strong>
      <p><%= comment.body %></p>
      <p><%= link_to '削除', comment_path(comment), method: :delete, data: { confirm: '本当に削除してもいいですか?' } %></p>
    </div>
  <% end %>
  <%= render 'comments/form' %>


<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
